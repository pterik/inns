<?xml version="1.0" encoding="UTF-8"?>
<install type="module" version="1.5" method="upgrade">
	<name>JEA emphasis V1.4</name>
	<author>Sylvain Philip</author>
	<creationDate>mars 2008</creationDate>
	<copyright>(C) 2008 PHILIP Sylvain. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>contact@sphilip.com</authorEmail>
	<authorUrl>www.sphilip.com</authorUrl>
	<version>1.5</version>
	<description>DESCJEAEMPHASISMOD</description>
	<files>
		<filename module="mod_jea_emphasis">mod_jea_emphasis.php</filename>
		<filename module="mod_jea_emphasis">helper.php</filename>
		<filename module="mod_jea_emphasis">mod_jea_emphasis.css</filename>
		<filename module="mod_jea_emphasis">tmpl/default.php</filename>
	</files>
	
	<languages folder="languages">
	    <language tag="en-GB">en-GB.mod_jea_emphasis.ini</language>
		<language tag="fr-FR">fr-FR.mod_jea_emphasis.ini</language>
	</languages>
	
	<params>
		<param name="selection" type="list" default="emphasis" label="Selection" description="PARAMSELECTION">
			<option value="emphasis">Featured properties</option>
			<option value="latest">Latest properties</option>
			<option value="random">Random properties</option>
		</param>
	
		<param name="display_thumbnails" type="radio" default="1" label="Display thumbnails" description="PARAMUDISPLAYTHUMBNAILS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="display_details" type="radio" default="1" label="Display details" description="PARAMUDISPLAYDETAILS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		
		<param name="order_by" type="list" default="ordering" label="Order by" description="PARAMORDERBY">
			<option value="ordering">Order</option>
			<option value="date_insert">Date</option>
			<option value="price">Price</option>
			<option value="rand()">Random</option>
		</param>
		<param name="number_to_display" type="text" default="5" label="Number to display" description="PARAMNUMBERTODISPLAY" />
		<param name="sales_itemid" type="menuitem" default="" label="Sales menu Item" description="PARAMSALESMENUITEM"/>
		<param name="rentals_itemid" type="menuitem" default="" label="Rentals menu Item" description="PARAMRENTALSMENUITEM"/>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
	
</install>
