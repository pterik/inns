<?xml version="1.0" encoding="utf-8"?>
<install version="1.5.2" type="plugin" group="search">
	<name>Search - Jea</name>
	<author>Thader Consultores</author>
	<creationDate>March 2011</creationDate>
	<copyright>Copyright (C) 2011 Thader Consultores, C.B. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>thaderconsultores@thcconsultores.com</authorEmail>
	<authorUrl>www.thcconsultores.com</authorUrl>
	<version>1.5.2</version>
	<description>This plugin allows to search through JEA properties in their reference and name</description>
	<files>
		<filename plugin="jea">jea.php</filename>
	</files>
	<params>
		<param name="search_limit" type="text" size="5" default="50" label="Search Limit" description="The number of search items to return"/>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="search_ref" type="radio" default="1" label="Search Reference" description="Search in Reference?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="search_title" type="radio" default="1" label="Search Title" description="Search in Title?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="search_description" type="radio" default="0" label="Search Description" description="Search in Description?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
	<languages>
		<language tag="es-ES">en-GB.plg_search_jea.ini</language>
	</languages>
</install>